
<head>
    <link rel="stylesheet" href="css/userOTP.css">
</head>
   

<section style="height:25rem; width: 20rem;">
    
   
    <h3>Enter OTP</h3>
    <p>We have sent a verification code to your Given email</p>
    <div id='inputs'>
      <input id='input1' type='text' maxLength="1" />
      <input id='input2' type='text' maxLength="1" />
      <input id='input3' type='text' maxLength="1" />
      <input id='input4' type='text' maxLength="1" />
    </div>
    <button>Submit</button>
  </section>

  <script>
    const inputs = ["input1", "input2", "input3", "input4"];

inputs.map((id) => {
  const input = document.getElementById(id);
  addListener(input);
});

function addListener(input) {
  input.addEventListener("keyup", () => {
    const code = parseInt(input.value);
    if (code >= 0 && code <= 9) {
      const n = input.nextElementSibling;
      if (n) n.focus();
    } else {
      input.value = "";
    }

    const key = event.key; // const {key} = event; ES6+
    if (key === "Backspace" || key === "Delete") {
      const prev = input.previousElementSibling;
      if (prev) prev.focus();
    }
  });
}
  </script>