     <script>
      function verifyPayment(response, order) {
        $.ajax({
            url: '/confirmAddtoWallet',
            method: 'post',
            data: {
                response,
                order,
                from:'wallet',
            },
            success: (response) => {
                if (response) {
                    Swal.fire({
                        title: "Success",
                        text: "Payment has been succesful",
                        icon: "success",
                    }).then(()=>{
                      location.reload()
                    })
                } else {
                    Swal.fire("PAYMENT ERROR!", "Something wrong occured while processing the payment.", "error");
                    location.reload()
                }
            }
        })
    }

      async function addMoney(){
        const { value: number } = await Swal.fire({
          title: 'Enter the Amount',
          input: 'number',
          inputLabel: 'Amount',
          inputPlaceholder: 'â‚¹'
        })
        $.ajax({
          url:'/add-money',
          method:'post',
          data:{
            total:number
          },
          success:(data)=>{
            if(data.razorpay){
              var options = {
            "key": 'rzp_test_sPwoxcRC0hnSFO', // Enter the Key ID generated from the Dashboard
            "amount": data.order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
            "currency": "INR",
            "name": "Future Furniture",
            "description": "Test Transaction",
            "image": "http://localhost:3000/images/logo.png",
            "order_id": data.order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
            "handler": function (response) {
                verifyPayment(response, data);
            },
            "prefill": {
                "name": "ShoeShop",
                "email": "stepz@gmail.com",
                "contact": "7356203811"
            },
            "notes": {
                "address": "Razorpay Corporate Office"
            },
            "theme": {
                "color": "#3399cc"
            }
        };
        var rzp1 = new Razorpay(options);
        rzp1.open();
            }
          }
        })
      }

      document.getElementById("copyButton").addEventListener("click", function () {
    const couponCode = document.getElementById("referalCode").value;
    copyToClipboard(couponCode);
    updateCopyButton(); // Update the copy button's appearance
    $('#modalCoupon').modal('hide'); // Close the modal after copying
  });

  function updateCopyButton() {
    const copyButton = document.getElementById("copyButton");
    copyButton.innerHTML = '<i class="fas fa-check ml-1 white-text"></i>';
    copyButton.disabled = true; // Disable the button after copying
  }

  async function copyToClipboard(text) {
    try {
      await navigator.clipboard.writeText(text);
    } catch (error) {
      console.error("Failed to copy:", error);
    }
  }

  
  
    </script>
